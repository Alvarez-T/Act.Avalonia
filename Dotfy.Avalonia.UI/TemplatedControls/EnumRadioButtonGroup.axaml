<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Dotfy.Avalonia.UI.TemplatedControls">
  <Design.PreviewWith>
    <controls:EnumRadioButtonGroup />
  </Design.PreviewWith>

  <Style Selector="controls|EnumRadioButtonGroup">
      <Setter Property="ItemsPanel">
          <ItemsPanelTemplate>
              <StackPanel Orientation="{TemplateBinding Orientation}" Spacing="{TemplateBinding Spacing}"/>
          </ItemsPanelTemplate>
      </Setter>
      <Setter Property="Template">
          <ControlTemplate>
              <ItemsPresenter ItemsPanel="{TemplateBinding ItemsPanel}" />
          </ControlTemplate>
      </Setter>
  </Style>
</Styles>
